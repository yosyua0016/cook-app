<!-- views/posts/edit.html.erb -->
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>食活しよう！！</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
  <%= stylesheet_link_tag "application", integrity: "sha384-rkAsTpS3L99Bz9uG5Y7uxmV2VJcJg6b6unE8BHOz7e0OaHntUVI+hS5X39dVNLid", crossorigin: "anonymous" %>
  <%= stylesheet_link_tag "edit" %> 
</head>
<body>
  <div class="container">
    <div class="card edit-form-wrapper">
      <h3 class="card-header">投稿を編集する</h3>
      <div class="card-body">
        <%= form_with(model: @post, local: true, multipart: true) do |form| %>
          <div class="mb-3">
            <%= form.label :title, class: "form-label" %>
            <%= form.text_field :title, class: "form-control" %>
          </div>
          
          <div class="mb-3">
            <%= form.label :category_id, class: "form-label" %>
            <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "選択してください" }, class: "form-select" %>
          </div>
          
          <div class="mb-3">
            <%= form.label :image, class: "form-label" %>
            <%= form.file_field :image, class: "form-control" %>
          </div>
          
          <div class="mb-3">
            <%= form.label :comment, class: "form-label" %>
            <%= form.text_area :comment, class: "form-control" %>
          </div>
          
          <%= form.submit "更新", class: "btn btn-primary" %>
          <%= link_to "削除", post_path(@post), data: { turbo_method: :delete }, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</body>
</html>