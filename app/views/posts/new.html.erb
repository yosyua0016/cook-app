<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>新規投稿</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
  <%= stylesheet_link_tag "application", integrity: "sha384-rkAsTpS3L99Bz9uG5Y7uxmV2VJcJg6b6unE8BHOz7e0OaHntUVI+hS5X39dVNLid", crossorigin: "anonymous" %>
  <%= stylesheet_link_tag "post_new" %>
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="card-body text-center">
        <h2 class="card-title mb-4">新規投稿</h2>
        <%= form_with(model: @post, local: true) do |form| %>
          <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :category_id %>
            <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "選択してください" }, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :image %>
            <%= form.file_field :image, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :comment %>
            <%= form.text_area :comment, class: "form-control" %>
          </div>

          <div class="text-center"> <!-- ボタンを中央寄せ -->
            <%= form.submit "投稿する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>
</html>